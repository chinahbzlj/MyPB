<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhou.mypowerbee">

    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 写入数据权限 内置存储卡WRITE_EXTERNAL_STORAGE  外置存储卡 MOUNT_UNMOUNT_FILESYSTEMS-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_STORAGE" />
    <!-- 创建删除文件权限  -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 网络请求  -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service
            android:name=".service.MyService"
            android:exported="false" />
        <activity
            android:name=".module.user.LoginSignActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<activity-->
        <!--android:name=".ui.DemoActivity"-->
        <!--android:screenOrientation="portrait" />-->
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".module.welcome.WelcomeActivity" />
    </application>

</manifest>