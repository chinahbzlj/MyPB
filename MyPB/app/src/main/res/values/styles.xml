<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseThemeCustom">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseThemeCustom" parent="AppBaseTheme">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/topbar_bg</item>
        <item name="colorPrimaryDark">@color/topbar_bg</item>
        <item name="colorAccent">@color/topbar_bg</item>
        <item name="android:windowBackground">@color/topbar_bg</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="toolbar_custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="login_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_min</item>
        <item name="android:paddingLeft">@dimen/edit_text_paddingleft</item>
        <item name="android:layout_marginTop">@dimen/edit_layout_margin_top</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_little</item>
        <item name="android:textSize">@dimen/text_size_m_large</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
    </style>

</resources>

